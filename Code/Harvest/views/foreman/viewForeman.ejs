<div class="container">
	<div class="row jumbo">
		<div class="col-md-10 col-md-offset-1">
			<div class="jumbotron">
				<div class="container">
					<fieldset>
						<legend>Foremen</legend>
						<div ng-app="ForemanModule" ng-controller="ForemanController" id="tableContainer">
							<table class="table table-bordered">
								<th>#</th>
								<th>Foreman</th>							
								<th>Edit</th>
								<% if(type.length == 0) { %>
									<tr>
											<td colspan="3">There are no foremen linked to you yet <br />
											Create a new foreman or link and existing one with your profile.
											</td>
										</tr>
								<% } else { %>
									<% _.each(type, function(foreman, index) { %>
										<% if (typeof crop != "undefined" ) { %>
											<tr>
												<td><%= index + 1 %>.</td>
												<td><%= crop.name %></td>
												<td><a class="info" href="/foreman/editForeman/<%= foreman.uname %>"><span class="glyphicon glyphicon-edit"></span> Edit</a></td>
											</tr>																			
										<% } %>
									<% }) %>
								<% } %>							
							</table>
						</div>
						<br/>
						<a href="/foreman/createForeman" class="btn">Add Foreman</a>											
					</fieldset>
				</div>
			</div>
		</div>
	</div>
</div>