<div class="container" ng-app="MainModule" ng-controller="MainController">
  <div class="row jumbo">
    <div class="col-md-10 col-md-offset-1">
      <div class="jumbotron">
        <!-- SIGNUP FORM --> 
        <form action="/farm/update/<%= farm.id %>" method="post" name="frmUpdateFarm" id="frmUpdateFarm">
          <fieldset>
            <legend>Edit Farm</legend>

            <label for="fname">Farm Name</label>
            <input type="text" name="fname" class="form-control" ng-init="updateFarmFrm.fname='<%= farm.name %>'" placeholder="Macadamia Mania" ng-model="updateFarmFrm.fname" ng-maxlength="50" >
            <span class="errorText" ng-show="frmUpdateFarm.fname.$error.maxlength">The farm name cannot be more than 50 characters.</span><br>

            <label for="lname">Farm Size (In Hectares)</label>
            <input type="number" name="fsize" class="form-control" ng-init="updateFarmFrm.fsize=<%= farm.size %>" placeholder="19.2" ng-model="updateFarmFrm.fsize" step="any">        
            <span class="errorText" ng-show="frmUpdateFarm.fsize.$error.number">This is not a number</span><br>

          <!-- Disable signup button until the form has no errors -->
          <button type="submit" class="btn" id="btnCreateFarm" ng-click="click()" ng-disabled="frmUpdateFarm.$invalid">
            <span ng-show="!editFrm.loading">Update Farm</span>
            <span class="overlord-loading-spinner fa fa-spinner" ng-show="editFrm.loading"></span>
            <span ng-show="editFrm.loading">Updating Your Farm...</span>
          </button>

          <input type="hidden" name="_csrf" value="<%= _csrf %>" />
        </form>
      </div>
    </div>
  </div>
</div>